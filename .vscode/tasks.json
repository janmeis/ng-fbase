{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ngserve",
      "type": "shell",
      "command": "ng",
      "args": [
        "serve",
        "--port",
        "4199"
      ],
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "\\b\\B",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\*+\\sAngular\\sLive\\sDevelopment\\sServer",
            "endsPattern": "Compiled\\ssuccessfully\\.\\s*$"
          }
        }
      ]
    }
  ]
}
